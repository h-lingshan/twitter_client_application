<% if @feed_items.any? %>
  <ol class="microposts">
  <% @feed_items.each do |tweet|%>
    <li>
     <%= gravatar_for tweet.user.profile_image_url, tweet.id %>
     <%= link_to tweet.user.username, "" %>
     <P><%= distance_of_time_in_words_to_now(tweet.created_at)%>前</p>
     <p><%= tweet.text %></p>
     <%= link_to "保存",static_pages_save_tweet_path(:username => tweet.user.username, :text => tweet.text), :method => "post" ,:class => "btn btn-primary btn-xs",:remote => true %>
    </li>   
  <% end %>
  </ol>
<% end %>