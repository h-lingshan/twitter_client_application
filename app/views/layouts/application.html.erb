<!DOCTYPE html>
<html>
  <head>
    <title><%= yield(:title)%>| Twitter client</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class = "navbar navbar-fixed-top navbar-inverse">
      <div class="container">
        <%= link_to "Twitter Client", '#', id: "logo" %>
        <nav>
          <ul class="nav navbar-nav navbar-right">
            <li><%= link_to "ホーム", static_pages_home_path %></li>
              <% if user_signed_in? %> 
                  <li><%= link_to "気に入りTWEET", static_pages_show_tweet_path %></li>
                  <li><%= link_to "タイムライン", static_pages_show_path %></li>
                  <li><%= link_to 'プロフィール変更', edit_user_registration_path %></li>
                  <li><%= link_to "ログアウト", destroy_user_session_path, method: :delete %></li>
                <% else %>
                  <li><%= link_to "サインイン", new_user_registration_path %></li>
                  <li><%= link_to "ログイン", new_user_session_path %></li>
                  <li><%= link_to "Sign in with Twitter",  user_twitter_omniauth_authorize_path %></li>
              <% end %>
          </ul>
        </nav>
      </div>
    </header>
    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
